#dnl library
#AC_DEFUN([CU_CHECK_LIB],
#[AC_CHECK_FUNCS($2, , AC_CHECK_LIB($1, $2))])
#CU_CHECK_LIB(nsl, yp_match)
#CU_CHECK_LIB(socket, socket)
